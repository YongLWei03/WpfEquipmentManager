<Window x:Class="WpfEquipmentManager.SelectNumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEquipmentManager"
        mc:Ignorable="d"
        Title="编辑数量" Height="204" Width="332" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Icon="Apps_system_file_manager_128px_1187114_easyicon.net.ico">
    <Grid>
        <StackPanel x:Name="MylistItemStackPanel" DataContext="{Binding}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="200" Margin="0,40,0,0">
                <TextBlock x:Name="NameTextBox" Text="{Binding Path=Equipment.Name}" Margin="10,0" FontSize="20" Width="100" TextAlignment="Right"></TextBlock>
                <ComboBox x:Name="NumComboBox" Margin="10,0" SelectedIndex="{Binding Path=Num}" Width="60" FontSize="20"></ComboBox>
            </StackPanel>
            <Button FontSize="20" Width="100" Margin="0,40,0,0" Background="#FF169BD5" Foreground="White" Click="Button_Click">确定</Button>
        </StackPanel>
    </Grid>
</Window>
